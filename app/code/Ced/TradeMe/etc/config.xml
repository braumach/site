<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <carriers>
            <shipbytrademe>
                <active>1</active>
                <sallowspecific>0</sallowspecific>
                <model>Ced\TradeMe\Model\Carrier\Shipbytrademe</model>
                <name>Trade Me Shipping</name>
                <price>0.00</price>
                <title>Trade Me Shipping Method</title>
                <type>I</type>
                <specificerrmsg>This shipping method is not available. To use this shipping method, please contact us.</specificerrmsg>
            </shipbytrademe>
        </carriers>
        <payment>
            <paybytrademe>
                <active>1</active>
                <model>Ced\TradeMe\Model\Payment\PaybyTrademe</model>
                <order_status>Processing</order_status>
                <title>Trade Me Payment Method(Default)</title>
                <payment_action>sale</payment_action>
                <allowspecific>0</allowspecific>
            </paybytrademe>
        </payment>
    </default>
</config>