<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">amazon_strategy_form.amazon_strategy_form_data_source</item>
        </item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="array">
                <item name="name" xsi:type="string">back</item>
                <item name="label" xsi:type="string" translate="true">Back</item>
                <item name="class" xsi:type="string">back</item>
                <item name="url" xsi:type="string">*/*/index</item>
            </item>
            <item name="save" xsi:type="array">
                <item name="name" xsi:type="string">save</item>
                <item name="label" xsi:type="string" translate="true">Save</item>
                <item name="class" xsi:type="string">primary</item>
            </item>
            <item name="save_and_continue" xsi:type="string">Ced\Amazon\Block\Adminhtml\Strategy\Button\SaveAndContinue
            </item>
            <item name="delete" xsi:type="string">Ced\Amazon\Block\Adminhtml\Strategy\Button\Delete</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Strategy Information</item>
        <item name="config" xsi:type="array">
            <item name="namespace" xsi:type="string">amazon_strategy_form</item>
            <item name="deps" xsi:type="string">amazon_strategy_form.amazon_strategy_form_data_source</item>
            <item name="dataScope" xsi:type="string">data</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <dataSource name="amazon_strategy_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Ced\Amazon\Ui\DataProvider\Strategy\Form\DataProvider</argument>
            <argument name="name" xsi:type="string">amazon_strategy_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="amazon/strategy/save"/>
                    <item name="validate_url" xsi:type="url" path="amazon/strategy/validate"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="general">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="label" xsi:type="string" translate="true">Strategy Information</item>
            </item>
        </argument>

        <field name="id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">amazon_strategy_form_data_source</item>
                    <item name="label" xsi:type="string" translate="true">Id</item>
                </item>
            </argument>
        </field>

        <field name="active">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="source" xsi:type="string">amazon_strategy_form_data_source</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="label" xsi:type="string" translate="true">Active</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="default" xsi:type="string">1</item>
                </item>
            </argument>
        </field>

        <field name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">amazon_strategy_form_data_source</item>
                    <item name="label" xsi:type="string" translate="true">Strategy Name</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>

        <field name="type">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Ced\Amazon\Model\Source\Strategy\Type</item>
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">amazon_strategy_form_data_source</item>
                    <item name="label" xsi:type="string" translate="true">Type</item>
                    <item name="disabled" xsi:type="boolean">true</item>
                    <item name="default" xsi:type="string">global_strategy</item>
                </item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="type">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true">Type Configuration</item>
            </item>
        </argument>
        <container name="strategy_url_container">
            <htmlContent name="html_content">
                <argument name="block" xsi:type="object">Ced\Amazon\Block\Adminhtml\Strategy\Js</argument>
            </htmlContent>
        </container>
    </fieldset>
</form>